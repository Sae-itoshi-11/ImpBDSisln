mysql> CREATE TABLE DESAG (
    ->     Productos varchar (10) NOT NULL,
    ->     Cantidad int (1)NOT NULL
    -> );
Query OK, 0 rows affected, 1 warning (1.97 sec)

mysql> INSERT INTO DESAG (Productos, Cantidad) VALUES 
    -> ('L치piz', 3),
    -> ('Borrador', 4),
    -> ('Cuaderno', 2);
Query OK, 3 rows affected (0.00 sec)
Records: 3  Duplicates: 0  Warnings: 0

mysql> SELECT Productos, 1 AS cantidad FROM DESAG WHERE Cantidad >= 1
    -> UNION ALL
    -> SELECT Productos, 1 AS cantidad FROM DESAG WHERE Cantidad >= 2
    -> UNION ALL
    -> SELECT Productos, 1 AS cantidad FROM DESAG WHERE Cantidad >= 3
    -> UNION ALL
    -> SELECT Productos, 1 AS cantidad FROM DESAG WHERE Cantidad >= 4
    -> UNION ALL
    -> SELECT Productos, 1 AS cantidad FROM DESAG WHERE Cantidad >= 5
    -> UNION ALL
    -> SELECT Productos, 1 AS cantidad FROM DESAG WHERE Cantidad >= 6
    -> UNION ALL
    -> SELECT Productos, 1 AS cantidad FROM DESAG WHERE Cantidad >= 7
    -> UNION ALL
    -> SELECT Productos, 1 AS cantidad FROM DESAG WHERE Cantidad >= 8
    -> UNION ALL
    -> SELECT Productos, 1 AS cantidad FROM DESAG WHERE Cantidad >= 9
    -> 
    -> ORDER BY Productos;

